{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "cli",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["cli/**/*.ts"],
  "exclude": ["node_modules", "dist", "hooks"]
}
